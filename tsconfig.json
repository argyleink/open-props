{
	"compilerOptions": {
		"allowJs": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"esModuleInterop": true,
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"skipLibCheck": true
	},
	"include": ["js/*.js"],
	"exclude": ["node_modules", "css", "docs", "test"]
}
