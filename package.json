{
	"type": "module",
	"name": "open-props",
	"author": "Adam Argyle",
	"license": "MIT",
	"version": "2.0.0-beta.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/argyleink/open-props"
	},
	"keywords": [
		"css",
		"js",
		"utilities",
		"css variables",
		"variables",
		"custom properties",
		"gradients",
		"color"
	],
	"style": "open-props.min.css",
	"source": "js/index.js",
	"main": "js/index.js",
	"unpkg": "open-props.min.css",
	"module": "js/index.js",
	"exports": {
		".": {
			"import": "./js/index.js",
			"default": "./js/index.js"
		},
		"./src": "./css/index.css",
		"./style": "./open-props.min.css",
		"./json": "./json/tokens.json",
		"./tokens": "./json/tokens.json",
		"./design-tokens": "./json/tokens.json",
		"./style-dictionary-tokens": "./json/style-dictionary.tokens.json",
		"./*": "./*"
	},
	"browserslist": [
		"defaults"
	],
	"lightning": {
		"process": "--bundle --custom-media -t 'last 2 versions'",
		"minify": "--bundle --custom-media --minify -t 'last 2 versions'"
	},
	"scripts": {
		"test": "ava test/basic.test.cjs",
		"build": "concurrently npm:lib:* -m 25",
		"lib:all": "lightningcss --bundle --custom-media --minify -t 'last 2 versions' css/index.css -o open-props.min.css",
		"lib:normalize": "lightningcss --bundle --custom-media --minify -t 'last 2 versions' css/packs/normalize/index.css -o normalize.min.css"
	},
	"devDependencies": {
		"ava": "^5.3.1",
		"concurrently": "^8.2.2",
		"lightningcss-cli": "^1.22.1",
		"prettier": "^3.1.0"
	}
}
